# Database Configuration
# For local PostgreSQL development
DATABASE_URL="postgresql://postgres:password@localhost:5432/carrierhub_dev?sslmode=disable"

# For Neon Postgres (production)
# DATABASE_URL="postgresql://username:password@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require"

# Test Database (for running tests)
TEST_DATABASE_URL="postgresql://postgres:password@localhost:5432/carrierhub_test?sslmode=disable"

# Server Configuration
PORT=5000
HOST=0.0.0.0
NODE_ENV=development

# JWT Configuration
JWT_SECRET="dev-jwt-secret-change-in-production-12345"
JWT_EXPIRES_IN="7d"

# Razorpay Configuration (Get these from https://dashboard.razorpay.com/)
# For test mode, use test keys (rzp_test_xxx)
# For production, use live keys (rzp_live_xxx)
RAZORPAY_KEY_ID="rzp_test_xxx"
RAZORPAY_KEY_SECRET="rzp_secret_xxx"
RAZORPAY_WEBHOOK_SECRET="rzp_wh_secret_xxx"

# CORS Configuration
FRONTEND_URL="http://localhost:3000"

# Rate Limiting Configuration
# Window in milliseconds (15 minutes = 900000ms)
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100

# Business Logic Configuration
# Minimum booking amount in paise (â‚¹100 = 10000 paise)
MIN_BOOKING_AMOUNT=10000