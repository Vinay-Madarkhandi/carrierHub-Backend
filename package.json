{
  "name": "carrierhub-backend",
  "version": "1.0.0",
  "description": "Production-ready backend for CarrierHub - student-first consultant booking app",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:network": "node test-network.js",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:seed": "node scripts/seed.js",
    "db:reset": "npx prisma migrate reset --force && npm run db:seed",
    "db:studio": "npx prisma studio",
    "db:deploy": "npx prisma migrate deploy",
    "db:status": "npx prisma migrate status",
    "db:create": "npx prisma db push"
  },
  "keywords": [
    "carrierhub",
    "consultant",
    "booking",
    "razorpay",
    "nodejs",
    "express"
  ],
  "author": "CarrierHub Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "razorpay": "^2.9.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^6.15.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}